@require '../../../style/colors.styl'

#header
  position absolute
  left 0px
  top 0px
  width 100%
  height 3em
  background linear-gradient(2deg,
    $pageHeaderDarkColor,
    $pageHeaderLightColor 65%,
    $pageHeaderLightColor)
  color $lightTextColor
  display flex
  flex-direction row-reverse
  align-content center
  align-items center
  justify-content space-between

  img.headerButton
    width: 1.5em;
    height: 1.5em;
    margin: 0.75em;
    cursor: pointer;
    -webkit-filter: imgColorFilter($defaultLightIconColor);
    filter: imgColorFilter($defaultLightIconColor);

  #brandingIcons img
    -webkit-filter imgColorFilter($defaultLightIconColor);
    filter imgColorFilter($defaultLightIconColor);
    width 10em;
    height 2em;
    margin 0.25em;

  #brandingIcons img:hover
    /* Sneakiness here: we *remove* the color filter,
       so the native icon colors show through */
    -webkit-filter url(#dropShadow);
    filter url(#dropShadow);

  #interfaceIcons
    padding-right 0.25em;

  #projectHeader
    display flex;
    align-items center;
    padding-left 0.25em;

  #projectHeader #projectIcons
    display inherit;

  #projectName
    background-color inherit;
    color inherit;
    border none;
    margin 0.75em;
    text-align center;
    box-shadow none;

  img.headerButton.new
    -webkit-filter imgColorFilter($newInfoIconColor);
    filter imgColorFilter($newInfoIconColor);

  img.headerButton:hover
    -webkit-filter imgColorFilter($lightRolloverColor) url(#dropShadow);
    filter imgColorFilter($lightRolloverColor) url(#dropShadow);

  div.indicators
    position relative;
    width 0px;
    height 0px;

  div.indicators img
    position absolute;
    width 1em;
    height 1em;
    top 0.5em;

  div.indicators img.left
    left -3em;

  div.indicators img.right
    left -1em;
