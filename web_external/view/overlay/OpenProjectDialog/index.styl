@require '../../../style/colors.styl';

.overlay
  .large-dialog
    summary h3
      display: inline-block;
      cursor pointer

    .main-chunk
      display: flex;

    .left-chunk
      display: flex;
      flex-direction: column;
      min-width: 14em;

      .menu-item
        cursor: pointer;
        padding: 0.5em 0em 0.5em 1em;
        margin: 0em -1em;
        line-height: 1.5em;

      .disabled.menu-item
        cursor: default;
        color: $disabledColor;

      .focused.menu-item
        background-color: $darkRolloverColor;
        color: $lightRolloverColor;

      .clickable.menu-item:hover
        background-color: $backgroundRolloverColor;
        color: $darkRolloverColor;

    .right-chunk
      display: flex;
      flex-direction: column;
      flex-grow: 2;
      position: relative;
      top: 1em;
      padding-bottom: 1em;

    .login-links
      position: absolute;
      top: 1.5em;
      right: 4em;

    div.circle-button img.badge
      position: absolute;
      width: 1em;
      height: 1em;
      right: 2.25em;
      bottom: 3.25em;
      -webkit-filter: imgColorFilter($warningIconColor);
      filter: imgColorFilter($warningIconColor);
