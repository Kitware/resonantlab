.in
  .modal-dialog
    .modal-content
      form.modal-form#g-login-form(role="form")

        .modal-header
          button.close(data-dismiss="modal" aria-hidden="true" type="button") Ã—
          h4.modal-title Log in
        
        .modal-body
          .form-group
            label.control-label(for="g-login") Login or email
            input.input-sm.form-control#g-login(type="text" placeholder="Enter login")
          
          .form-group
            label.control-label(for="g-password") Password
            input.input-sm.form-control#g-password(type="password" placeholder="Enter password")
          
          .g-validation-failed-message

          .g-bottom-message Don't have an account yet? #[a.g-register-link Register here.] | #[a.g-forgot-password Forgot your password?]

        .modal-footer
          a.btn.btn-default#close-login(data-dismiss="modal") Close
          
          button.btn.btn-default#g-login-button #[i.icon-login] Login
